<% layout('layouts/boilerplate')%>
<div class="row">
	<div class="col-md-12">
		<form action="/reset/<%= token %>" method="POST">
		  <legend>Reset Password</legend>
		  <div class="form-group">
		    <label for="password" class="mt-3">New Password</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm" class="mt-3">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary mt-5">Update Password</button>
		  </div>
		</form>
	</div>
</div>